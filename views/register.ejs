<form method="POST" action="/register">
    <input
      class="form-control"
      type="email"
      name="email"
      placeholder="email"
      style="width: 150px; margin: 1em"
    />
    <input
      class="form-control"
      type="password"
      name="password"
      placeholder="Password"
      style="width: 150px; margin: 1em"
    />
    <button type='submit'>Register</button>
  </form>