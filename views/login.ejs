<form method="POST" action="/login">
  <input
    class="form-control"
    type="text"
    name="email"
    placeholder="email"
    style="width: 300px; margin: 1em"
  />
  <input
    class="form-control"
    type="password"
    name="password"
    placeholder="password"
    style="width: 300px; margin: 1em"
  />
  <button type='submit'>Sign In</button>
</form>

